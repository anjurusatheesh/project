pipeline {
    agent any

    stages {
        stage('Git Clone repository') {
            steps {
                // Clone the repository from GitHub and checkout the 'main' branch
                git url: 'https://github.com/anjurusatheesh/project.git', branch: 'main'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    // Build the Docker image with the tag 'httpd'
                    sh "docker build -t httpd ."
                }
            }
        }

        stage('Docker Run') {
            steps {
                script {
                    // Run the Docker container on port 80
                    sh "docker run -d -p 80:80 httpd"
                }
            }
        }

        // Stage to push changes back to Git repository (if needed)
        stage('Git Push') {
            steps {
                script {
                    // Configure Git user (needed if running on a CI environment without a global config)
                    sh "git config user.name 'anjurusatheesh'"
                    sh "git config user.email 'anjurusatheesh@gmail.com'"

                    // Add changes (if any) and commit
                    sh "git add ."
                    sh "git commit -m 'Automated commit from Jenkins pipeline after Docker build and run'"

                    // Push changes back to the repository
                    sh "git push https://github.com/anjurusatheesh/project.git main"
                }
            }
        }
    }
}

